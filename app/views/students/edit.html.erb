<h1>Edit: <%= @student[0].first_name %></h1>

<form action="/dojos/<%= @dojo.id %>/students/<%= @student[0].id %>" method="post">
<input type="hidden" name="_method" value="patch">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

First Name: <input type="text" name="student[first_name]"><br><br>
Last Name: <input type="text" name="student[last_name]"><br><br>
Email: <input type="text" name="student[email]"><br><br>
Dojo:   <select name="student[dojo]">
   <% @dojos.each { |dojo| %>
       <option value="<%= dojo.id %>"><%= dojo.branch %></option>
   <% } %>
</select><br><br>
<input type="submit" value="Update">
</form>

<br>
<p><a href="/dojos">Home</a></p>
